{
    "plugins": [
        "react",
        "react-hooks"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "no-console": 1,
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": [
            2,
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-control-regex": 0,
        "no-extra-parens": "error",
        "no-multi-spaces": "error",
        "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
        "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
    },
    "settings": {
        "react": {
            "version": "^16.9.0"
        }
    }
}